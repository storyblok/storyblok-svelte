{
  "name": "@storyblok/svelte-ws",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "./lib",
    "./playground",
    "./playground-sveltekit"
  ],
  "types": "./dist/types.index.d.ts",
  "scripts": {
    "dev": "npm run dev --workspace=lib & npm run demo",
    "demo": "npm run demo --workspace=playground",
    "demo-sveltekit": "npm run dev --workspace=playground-sveltekit",
    "build": "npm run build --workspace=lib",
    "build:ts": "vite build && tsc --prokect tsconfigjson",
    "test:unit": "npm run test:unit --workspace=lib",
    "test:e2e": "npm run test:e2e --workspace=lib",
    "prepare": "husky install",
    "postinstall": "patch-package",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@rollup/plugin-typescript": "^9.0.1",
    "@tsconfig/svelte": "^3.0.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "patch-package": "^6.4.7",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "svelte-check": "^2.9.2",
    "svelte-preprocess": "^4.10.7",
    "tslib": "^2.0.0",
    "typescript": "^4.8.4",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1"
  },
  "lint-staged": {
    "*.{svelte,js,css,ts}": [
      "prettier --write",
      "eslint"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "browser": true
    },
    "ignorePatterns": "dist/",
    "plugins": [
      "svelte3",
      "@typescript-eslint"
    ],
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "processor": "svelte3/svelte3"
      }
    ],
    "settings": {
      "svelte3/typescript": true
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false
  }
}
